<h1>Listing ships</h1>

<table>
  <tr>
    <th>Person1</th>
    <th>Person2</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @ships.each do |ship| %>
  <tr>
    <td><%= ship.person1 %></td>
    <td><%= ship.person2 %></td>
    <td><%= link_to 'Show', ship %></td>
    <td><%= link_to 'Edit', edit_ship_path(ship) %></td>
    <td><%= link_to 'Destroy', ship, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

